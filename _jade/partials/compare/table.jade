mixin party-table-title(value, name)
	.compare-table__col-header(data-party="#{value}") #{name}

mixin party-table-policy-name(name)
	.compare-table__row-header #{name}

mixin party-table-policy-body(party, body)
	.compare-table__cell(data-party="#{party}")
		p #{body}
		span.btn-vote Vote

